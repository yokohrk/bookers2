<div class="mx-auto col-md-6">
  <h2 class="mb-3">User info</h2>
  <%= form_with model: @user, local:true do |f| %>
    <%= render 'layouts/error_message', model: f.object %>
    <div class="field mb-2">
      <label for="inputName">Name</label><br />
      <%= f.text_field :name, id:"inputName" %>
    </div>
    <div class="field mb-2">
      <label for="inputImage">Image</label><br />
      <%= f.attachment_field :profile_image %>
    </div>
    <div class="field mb-3">
      <label for="inputIntroduction">Introduction</label><br />
      <%= f.text_area :introduction, id:"inputIntroduction" %>
    </div>
    <%= f.submit "Update User", class: 'btn btn-secondary' %>
  <% end %>
</div>