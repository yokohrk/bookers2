<div class="col-md-3">
  <%= render 'users/info', user: @book.user %>
  <%= render 'new', book: Book.new %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <div>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
            </div>
            <div><%= @book.user.name %></div>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book), data: { confirm: "本当に削除しますか？" }, method: :delete, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>