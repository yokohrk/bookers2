<div class="mx-auto col-md-6">
  <h2 class="mb-3">Editing Book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <%= render 'layouts/error_message', model: f.object %>
    <div class="field mb-2">
      <label for="inputTitle">Title</label>
      <%= f.text_field :title, id:"inputTitle" %>
    </div>
    <div class="field mb-3">
      <label for="inputOpinion">Opinion</label>
      <%= f.text_area :body, id:"inputOpinion" %>
    </div>
    <%= f.submit 'Update Book', class: 'btn btn-success mb-4' %>
  <% end %>

  <%= link_to "Show", book_path(@book.id) %> |
  <%= link_to "Back", books_path %>
</div>